<div class="tab-container">
    <div class="tab active" id="tab-key">Key-Gen</div>
    <div class="tab" id="tab-discord">Discord/Support</div>
    <div class="tab-slider" id="tab-slider"></div>
</div>

<script>
    const tabKey = document.getElementById('tab-key');
    const tabDiscord = document.getElementById('tab-discord');
    const slider = document.getElementById('tab-slider');
    const textKey = document.getElementById('text-key');
    const textDiscord = document.getElementById('text-discord');

    function switchText(show, hide, direction = 'left') {
        hide.classList.remove('active');
        hide.style.opacity = '0';
        hide.style.transform = direction === 'left' ? 'translateX(-100%)' : 'translateX(100%)';

        setTimeout(() => {
            show.style.opacity = '1';
            show.style.transform = 'translateX(0)';
            show.classList.add('active');
        }, 300);
    }

    tabKey.addEventListener('click', () => {
        if (!tabKey.classList.contains('active')) {
            tabKey.classList.add('active');
            tabDiscord.classList.remove('active');
            slider.style.left = '0%';
            switchText(textKey, textDiscord, 'right');
        }
    });

    tabDiscord.addEventListener('click', () => {
        if (!tabDiscord.classList.contains('active')) {
            tabDiscord.classList.add('active');
            tabKey.classList.remove('active');
            slider.style.left = '50%';
            switchText(textDiscord, textKey, 'left');
        }
    });
</script>
